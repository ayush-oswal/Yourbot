generator client {
  provider = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())  // UUID for the user
  email     String    @unique               // Unique email
  username  String
  apikey    String    @default(uuid())      // API Key autogenerated as UUID
  tokens    Int       @default(50000)       // Default token balance
  createdAt DateTime  @default(now())       // Timestamp for creation
  chatbots  Chatbot[] // One user can have multiple chatbots
}

model Chatbot {
  id     String   @id @default(uuid())  // UUID for the chatbot
  name   String
  description String
  user   User     @relation(fields: [userId], references: [id])
  userId String   // Foreign key relation to the User model
}

model Chunk {
  id        String @id @default(uuid())  // UUID for each chunk
  chunkText String // Text data in the chunk
}
